<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.0.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_0_0.dtd">

<liferay-portlet-app>
	<portlet>
		<portlet-name>login</portlet-name>		
		<icon>/html/images/icons/login.png</icon>
		<preferences-unique-per-layout>true</preferences-unique-per-layout>
		<preferences-owned-by-group>true</preferences-owned-by-group>
		<instanceable>false</instanceable>				
		<private-session-attributes>false</private-session-attributes>
		<footer-portlet-javascript>/html/js/pm_fp.js</footer-portlet-javascript>		
		
		<css-class-wrapper>login-portlet</css-class-wrapper>	
		
		
	</portlet>
	<portlet>
		<portlet-name>useradministration</portlet-name>
	</portlet>
	<portlet>
		<portlet-name>passwordchange</portlet-name>
		<icon>/html/images/icons/passwordchange.png</icon>
		<instanceable>false</instanceable>
		<header-portlet-css>/html/css/web.css</header-portlet-css>
		<css-class-wrapper>passwordchange-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>webcontoc</portlet-name>
		<icon>/html/images/icons/web.png</icon>
		<control-panel-entry-category>content</control-panel-entry-category>
		<control-panel-entry-weight>20.0</control-panel-entry-weight>
		<instanceable>false</instanceable>
		<header-portlet-css>/html/css/web.css</header-portlet-css>
		<css-class-wrapper>web-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>